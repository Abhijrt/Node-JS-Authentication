<link rel="stylesheet" href="/css/sign-up.css" />
<div class="container-fluid sign-up-container">
  <div class="row">
    <div class="col-md-6 col-lg-4 m-auto">
      <h1>Reset Password</h1>
      <form action="/users/resetPassword/<%= token %>" method="POST">
        <% if(locals.user) {%>
        <div class="form-group">
          <label for="exampleInputEmail1" class="input-heading"
            >Old Password</label
          >
          <input
            type="password"
            class="form-control"
            name="oldpassword"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            placeholder="Enter Old Password"
            required
          />
        </div>
        <%}%>
        <div class="form-group">
          <label for="password1" class="input-heading">New Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password1"
            placeholder=" New Password"
            required
          />
        </div>
        <div class="form-group">
          <label for="password2" class="input-heading"
            >New Confirm Password</label
          >
          <input
            type="password"
            class="form-control"
            name="confirm_password"
            id="password2"
            placeholder="Confirm New Password"
            required
          />
        </div>
        <div class="btns">
          <button type="submit" class="btn btn-primary">Change</button>
        </div>
      </form>
    </div>
  </div>
</div>
